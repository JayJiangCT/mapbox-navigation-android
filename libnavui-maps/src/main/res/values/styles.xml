        <item name="primaryRouteColor">
            @color/mapbox_navigation_primary_route_layer_blue
        </item>
        <item name="primaryRouteModerateCongestionColor">
            @color/mapbox_navigation_primary_route_layer_congestion_yellow
        </item>
        <item name="primaryRouteSevereCongestionColor">
            @color/mapbox_navigation_primary_route_layer_congestion_red
        </item>
        <item name="primaryRouteShieldColor">
            @color/mapbox_navigation_primary_route_shield_layer_color
        </item>
        <item name="upcomingManeuverArrowColor">
            @color/mapbox_navigation_route_upcoming_maneuver_arrow_color
